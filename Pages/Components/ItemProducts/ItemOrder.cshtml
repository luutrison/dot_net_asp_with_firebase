@model List<BAN_BANH.Model.OrderLs>
@{
    var total = 0;
}



<div class="lcoc">
    @foreach (var item in Model)
    {
        total += item.sSanPham.gia.Value * item.sOrder.number;
        var url = new Method.MethodOne().URLSanPham(item.sSanPham.ten, item.sSanPham.msp);

        <div class="item-order-card" msp="@item.sSanPham.msp">
            <div class="item-detail-order-card">
                <a class="img-frame-link" href="#">
                    <div class="image-frame img-ratio-4x3"><img src="@item.sSanPham.anh"></div>
                </a>
                <div class="dtco">
                    <a class="npdc" href="@url">@item.sSanPham.ten</a>
                    <div class="poc"><span class="money">@item.sSanPham.gia</span><span>đ</span></div>
                </div>
            </div>
            <div class="numodc">
                <div class="ico"><span>x</span><input type="number" min="1" value="@item.sOrder.number"></div><a class="text-end" href="/product/deleteOrder?msp=@item.sSanPham.msp">Xóa</a>
            </div>
        </div>
    }

</div>
<div class="tco">
    <span id="ttnc">Tổng cộng</span>
    <div id="priceco"><span class="money">@total</span><span>đ</span></div>
</div>




