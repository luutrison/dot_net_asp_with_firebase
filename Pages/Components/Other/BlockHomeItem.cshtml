@model List<BAN_BANH.Model.BlockCateOnHomePage>
@{
}



    @for (int i = 0; i < Model.Count; i++)
    {
        var id = "";
        if (i==0)
        {
            id = "special-cake";
        }


        <div class="container" id="@id">
            <div class="category-home">
                <a href="@Model[i].danhMuc.url">
                <h2>@Model[i].danhMuc.name</h2><img src="~/statics/img/design/brush.svg">
                </a>
            </div>
            <div class="row gx-0 row-cols-3 row-cols-lg-3 row-cols-xxl-4 rliscake m-0">
            @foreach (var item in Model[i].sanPham)
                {
                    @await Component.InvokeAsync("ItemProduct", item)
                }
            </div>
        </div>
    }

