@using BAN_BANH.Model

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>BANBANH</title>

    @await Component.InvokeAsync(VARIBLE.COMP_COLORI)

    @await RenderSectionAsync(VARIBLE.SECT_COLORI, required: false)
</head>
<body>
    @await Component.InvokeAsync(VARIBLE.NAME_HEADER, VARIBLE.NAME_HEADER_DRUM)
    <div class="container">
            @RenderBody()
    </div>

    @await Component.InvokeAsync(VARIBLE.COMP_FOOTER)

    @await Component.InvokeAsync(VARIBLE.COMP_COLOR_II);

    @await RenderSectionAsync(VARIBLE.SECT_COLORII, required: false)
</body>
</html>